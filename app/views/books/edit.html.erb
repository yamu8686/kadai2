<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <a class="show"><%= link_to "Show", book_path(@book.id) %></a>
  |
  <a class="back"><%= link_to "Back", books_path(@book.id) %></a>

　<div class = "flash-notifications">
  　<% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
  　<% end %>
　</div>
<% end %>
